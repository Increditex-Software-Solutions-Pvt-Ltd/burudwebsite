<!DOCTYPE html>
<html>

<head>
    <title>burud samaj vadhu-var suchak samiti</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <link rel="stylesheet" href="css/profile_de.css"> -->
    <style>
        body {
            background-color: rgb(245, 228, 231);
        }

        .profile-pic {
            width: 200px;
            max-height: 200px;
            display: inline-block;
        }

        .maincircle {
            position: relative;

        }

        .file-upload {
            display: none;
        }

        .circle {
            border-radius: 100% !important;
            overflow: hidden;
            width: 128px;
            height: 128px;
            border: 2px solid rgba(255, 255, 255, 0.2);

        }

        img {
            max-width: 100%;
            height: auto;
        }

        .p-image {
            position: absolute;
            bottom: 10px;
            right: 0;
            color: white;
            transition: all .3s cubic-bezier(.175, .885, .32, 1.275);
        }

        .p-image:hover {
            transition: all .3s cubic-bezier(.175, .885, .32, 1.275);
        }

        .upload-button {
            font-size: 1.2em;
            background-color: #dd5044;
            border-radius: 50px;
            height: 40px;
            padding-top: 10px;
            width: 40px;
            text-align: center;
        }

        label {
            font-size: 18px;
        }
    </style>

    <!-- font awesoome link put here -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- font awesome end here -->
    <script src="https://raw.githack.com/eKoopmans/html2pdf/master/dist/html2pdf.bundle.js" defer></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="card shadow-sm mt-5" style="border-radius: 18px;">
                    <div class="card-body">
                        <h4 class="" style="text-align: center;">Edit Images</h4>
                        <div class="row d-flex align-items-center">
                            <div class="col-md-12">
                                <form class="row d-flex align-items-center" action="/editphotos/<%= userprofile.id %>" method="post"
                                    enctype="multipart/form-data">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="maincircle">
                                                <div class="circle">
                                                    <img class="profile-pic"
                                                        src="https://t3.ftcdn.net/jpg/03/46/83/96/360_F_346839683_6nAPzbhpSkIpb8pmAwufkC7c5eD7wYws.jpg">

                                                </div>
                                                <div class="p-image">
                                                    <i class="fa fa-camera upload-button"></i>
                                                    <input class="file-upload" name="profilepic" type="file"
                                                        accept="image/*" />
                                                </div>
                                            </div>
                                        </div>
                                        <label for="" class="form-label">profile photo</label>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="" class="form-label">first bio pic</label>
                                        <input type="file" class="form-control" name="biopic1" accept="image/*">
                                        
                                    </div>
                                    <div class="col-md-12">
                                        <div class="row mt-5">
                                            <div class="col-md-6">
                                                <label for="" class="form-label">second bio pic</label>
                                                <input type="file" class="form-control" name="biopic2" accept="image/*">
                                            </div>
                                            <div class="col-md-6">
                                                <label for="" class="form-label">horo image</label>
                                                <input type="file" class="form-control" name="horoimage" accept="image/*">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="ml-4 mt-5">
                                         <button class="btn btn-lg btn-dark" type="submit">save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="js/registration.js"></script> -->

    <!-- registeration and send request script -->
    <script>
        $(document).ready(function () {


            var readURL = function (input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('.profile-pic').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }


            $(".file-upload").on('change', function () {
                readURL(this);
            });

            $(".upload-button").on('click', function () {
                $(".file-upload").click();
            });
        });
    </script>
</body>


</html>